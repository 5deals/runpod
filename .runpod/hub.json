{
  "name": "gonka-nonce-calculator",
  "description": "Serverless nonce calculator for Gonka decentralized network using LLaMA model inference",
  "version": "1.0.0",
  "runtime": {
    "dockerfile": "Dockerfile",
    "handler": "handler.py"
  },
  "env": {
    "LOG_LEVEL": "INFO"
  },
  "min_gpu_count": 1,
  "min_gpu_memory_gb": 24,
  "recommended_gpu": "NVIDIA RTX A6000",
  "scaling": {
    "min_workers": 0,
    "max_workers": 10
  },
  "timeout": 600,
  "categories": ["AI/ML", "Blockchain"],
  "tags": ["pytorch", "llama", "proof-of-compute", "blockchain"]
}
